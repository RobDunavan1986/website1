
@model GameOnProject.Web.Models.ProfileModel

<script src="~/Scripts/DMACC/profile.js" type="text/javascript"></script>
<h2>Update Student</h2>



<div class="row">

    <div class="col-md-3">

        <label> Name</label>

    </div>

    <div class="col-md-7">

        <input id="searchString" type="text" class="form-control" />

    </div>

    <div class="col-md-2">

        <button class="btn btn-dark" onclick="searchProfile()">Search</button>

    </div>

</div>



<hr />
<h2>Update Profile</h2>

<div id="successMessage" class="hidden alert alert-success">
    Successfully Updated!
</div>

<div id="errorMessage" class="hidden alert alert-danger">
    Error Occurred!
</div>

<input id="userId" type="hidden" />
<div class="col-md-12">
    <div class="col-md-6">
        <label>First Name:</label>
    </div>
    <div class="col-md-6">
        <input id="firstName" type="text" class="form-control" />
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-6">
        <label>Last Name:</label>
    </div>
    <div class="col-md-6">
        <input id="lastName" type="text" class="form-control" />
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-6">
        <label>Gender:</label>
    </div>
    <div class="col-md-6">
        <input id="gender" type="text" class="form-control" />
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-6">
        <label>Email:</label>
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Email)
        @Html.ValidationMessageFor(model => model.Email)



    </div>
</div>

